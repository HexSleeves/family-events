[Unit]
Description=Family Events Scheduler (Cron)
After=network.target

[Service]
Type=simple
User=exedev
WorkingDirectory=/home/exedev/family-events
ExecStart=/home/exedev/family-events/.venv/bin/python -m src.cron
Restart=on-failure
RestartSec=5
EnvironmentFile=/home/exedev/family-events/.env

[Install]
WantedBy=multi-user.target
